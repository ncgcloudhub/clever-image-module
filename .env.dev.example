# ── Coolify Dev VPS Environment ───────────────────────────────────────────────
# Set these values in Coolify → Environment Variables for the dev application.
# This file is a reference template — it is NOT loaded automatically.

APP_NAME="Clever Image Module"
APP_ENV=staging
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=https://image-dev.clevercreator.ai

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ── Database ─────────────────────────────────────────────────────────────────
# Use the Coolify-assigned internal hostname for PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=egc0sgws48sg8c8os00cw0cw
DB_PORT=5432
DB_DATABASE=clever-image-db-dev
DB_USERNAME=postgres
DB_PASSWORD=YOUR_DB_PASSWORD_HERE

# ── Cache / Session / Queue ───────────────────────────────────────────────────
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ── Redis ─────────────────────────────────────────────────────────────────────
# Use REDIS_URL on Coolify (full connection string from Coolify Redis resource)
REDIS_CLIENT=predis
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@h8kso40gkkcwoksw0k4wsswk:6379/0

# ── Mail ──────────────────────────────────────────────────────────────────────
# Use "log" driver for dev or configure real SMTP
MAIL_MAILER=log

# ── OAuth ─────────────────────────────────────────────────────────────────────
AISITE_OAUTH_BASE_URL=https://your-oauth-server/
AISITE_OAUTH_CLIENT_ID=your_client_id
AISITE_OAUTH_CLIENT_SECRET=your_client_secret
AISITE_OAUTH_REDIRECT_URI=https://image-dev.clevercreator.ai/oauth/callback
