# ── Coolify Prod VPS Environment ──────────────────────────────────────────────
# Set these values in Coolify → Environment Variables for the prod application.
# This file is a reference template — it is NOT loaded automatically.

APP_NAME="Clever Image Module"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://image.clevercreator.ai

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ── Database ─────────────────────────────────────────────────────────────────
# Use the Coolify-assigned internal hostname for PostgreSQL
DB_CONNECTION=pgsql
DB_HOST=YOUR_COOLIFY_POSTGRES_HOST
DB_PORT=5432
DB_DATABASE=clever-image-db-prod
DB_USERNAME=postgres
DB_PASSWORD=YOUR_DB_PASSWORD_HERE

# ── Cache / Session / Queue ───────────────────────────────────────────────────
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ── Redis ─────────────────────────────────────────────────────────────────────
# Use REDIS_URL on Coolify (full connection string from Coolify Redis resource)
REDIS_CLIENT=predis
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@YOUR_COOLIFY_REDIS_HOST:6379/0

# ── Mail ──────────────────────────────────────────────────────────────────────
# Configure real SMTP for production
MAIL_MAILER=smtp
MAIL_HOST=YOUR_SMTP_HOST
MAIL_PORT=587
MAIL_USERNAME=YOUR_SMTP_USERNAME
MAIL_PASSWORD=YOUR_SMTP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@clevercreator.ai"
MAIL_FROM_NAME="${APP_NAME}"

# ── OAuth ─────────────────────────────────────────────────────────────────────
AISITE_OAUTH_BASE_URL=https://your-oauth-server/
AISITE_OAUTH_CLIENT_ID=your_client_id
AISITE_OAUTH_CLIENT_SECRET=your_client_secret
AISITE_OAUTH_REDIRECT_URI=https://image.clevercreator.ai/oauth/callback
